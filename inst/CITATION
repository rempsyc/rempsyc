  title    = "rempsyc: Convenience Functions for Psychology",
  author   = "Rémi Thériault",
  year     = 2022,
  note     = paste0("(R package version ", version, ") [Computer software]."),
  url      = "https://rempsyc.remi-theriault.com",
  textVersion = paste0("Thériault, R. (2022). rempsyc: Convenience functions for psychology (R package version ", version, ") [Computer software]. https://rempsyc.remi-theriault.com")
)
